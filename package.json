{
  "name": "mern-store",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/romawcka/mern-store.git",
  "type": "module",
  "scripts": {
    "start": "node backend/index.js",
    "serve": "nodemon backend/index.js",
    "client": "cd frontend && yarn dev",
    "dev": "concurrently \"yarn serve\" \"yarn client\"",
    "data-i": "node backend/seeder",
    "data-d": "node backend/seeder -d",
    "build": "yarn install && yarn install --prefix frontend && yarn run build-frontend",
    "build-frontend": "cd frontend && yarn build"
  },
